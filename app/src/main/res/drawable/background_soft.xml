<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dégradé pastel -->
    <item>
        <shape>
            <gradient
                android:startColor="#A2C2E2"
            android:endColor="#F4B6C2"
            android:angle="45"/>
        </shape>
    </item>

    <!-- Effet de verre, fond semi-transparent -->
    <item android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp">
        <shape>
            <solid android:color="#AAFFFFFF"/>
            <corners android:radius="15dp"/>
            <stroke android:color="#FFFFFF" android:width="1dp"/> <!-- Bordure subtile -->
        </shape>
    </item>
</layer-list>
