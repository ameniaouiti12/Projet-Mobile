<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F6F7"
    tools:context=".ConfirmCode">

    <!-- Title -->

    <!-- Code Input Fields -->

    <!-- Confirm Button -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="208dp"
        app:srcCompat="@drawable/inlock"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Enter the confirmation code "
        android:textColor="#1C2833"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/code_input_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text">

        <!-- Code Input Circle 1 -->
        <EditText
            android:id="@+id/code_input_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="8dp"
            android:textColor="#1C2833"
            android:textSize="24sp" />

        <!-- Code Input Circle 2 -->
        <EditText
            android:id="@+id/code_input_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="8dp"
            android:textColor="#1C2833"
            android:textSize="24sp" />

        <!-- Code Input Circle 3 -->

        <!-- Code Input Circle 4 -->
        <EditText
            android:id="@+id/code_input_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="8dp"
            android:textColor="#1C2833"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/code_input_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="8dp"
            android:textColor="#1C2833"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="205dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#3498DB"
        android:padding="12dp"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/code_input_container" />


</androidx.constraintlayout.widget.ConstraintLayout>
