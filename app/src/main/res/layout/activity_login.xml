<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F4F6F7">

    <!-- Image du logo -->
    <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sign1" />

    <!-- Conteneur Email -->
    <LinearLayout
        android:id="@+id/email_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_email"
            app:tint="#757575" />

        <EditText
            android:id="@+id/signin_email_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@null"
            android:textColor="#333333"
        android:textColorHint="#757575" />
    </LinearLayout>

    <!-- Conteneur Mot de passe -->
    <LinearLayout
        android:id="@+id/password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_lock"
            app:tint="#757575"
            android:importantForAccessibility="no" />

        <EditText
            android:id="@+id/sigin_password_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@null"
            android:textColor="#333333"
        android:textColorHint="#757575" />
    </LinearLayout>

    <!-- CheckBox Remember Me -->
    <CheckBox
        android:id="@+id/remember_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Remember Me"
        android:textColor="#757575" />

    <!-- Bouton de connexion -->
    <Button
        android:id="@+id/connection_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#0A3D62"
        android:padding="12dp"
        android:text="Sign In"
        android:textColor="@android:color/white"
        android:elevation="2dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Lien Forgot Password -->
    <TextView
        android:id="@+id/change_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Forgot Password?"
        android:textColor="#3498DB"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Ligne de séparation avec "or" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#D1D5DB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Or"
            android:textColor="#757575" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#D1D5DB" />
    </LinearLayout>

    <!-- Boutons de connexion Google et Facebook avec icônes -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signup_google_button"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#0A3D62"
            android:drawableLeft="@drawable/log_googl"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:minHeight="48dp"
            android:text="Google"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/sign_up_button_facebook"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0A3D62"
            android:drawableLeft="@drawable/log_face"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:minHeight="48dp"
            android:text="Facebook"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Lien de création de compte -->
    <TextView
        android:id="@+id/Register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Don't have an account? Sign Up"
        android:textColor="#3498DB"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
