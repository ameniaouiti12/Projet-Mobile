<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"> <!-- Dégradé orange pour l'effet apaisant -->

    <!-- Image à gauche -->

    <!-- Texte "Sign Up" en gras et centré avec une taille de texte agrandie -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/signup" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#000000"
    android:textSize="24sp"
    android:layout_marginBottom="20dp"
    />

    <!-- Champ de texte pour le nom avec coins arrondis -->
    <EditText
        android:id="@+id/signup_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp"
        android:textColor="@color/email_password_text_color" />

    <!-- Champs de texte pour l'email avec coins arrondis -->
    <EditText
        android:id="@+id/signup_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp"
        android:textColor="@color/email_password_text_color" />

    <!-- Champs de texte pour le mot de passe avec coins arrondis -->
    <EditText
        android:id="@+id/signup_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp"
        android:textColor="@color/email_password_text_color" />

    <!-- Champ de vérification du mot de passe avec coins arrondis -->
    <EditText
        android:id="@+id/password_verification_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext_background"
        android:padding="12dp"
        android:textColor="@color/email_password_text_color" />

    <!-- Checkbox pour les termes et conditions -->
    <CheckBox
        android:id="@+id/terms_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="I agree to Terms of Service and Privacy Policy"
        android:textColor="#5D6D7E" />

    <!-- Bouton d'inscription carré -->
    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#0A3D62"
        android:padding="12dp"
        android:text="Sign Up"
        android:textColor="@android:color/white" />

    <!-- Ligne de séparation avec "Or" plus élégante -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#D3D3D3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Or"
            android:textColor="#B0B0B0"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#D3D3D3" />
    </LinearLayout>

    <!-- Boutons de connexion Google et Facebook avec coins carrés -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signup_google_button"
            android:layout_width="181dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#0A3D62"
            android:drawableLeft="@drawable/log_googl"
            android:drawablePadding="8dp"
            android:minHeight="48dp"
            android:text="Google"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/sign_up_button_facebook"
            android:layout_width="181dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:backgroundTint="#0A3D62"
            android:drawableLeft="@drawable/log_face"
            android:drawablePadding="8dp"
            android:minHeight="48dp"
            android:text="Facebook"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Lien pour rediriger à la connexion -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Already have an account? Sign In"
        android:textColor="#3498DB"
        android:textSize="15sp" />
</LinearLayout>
